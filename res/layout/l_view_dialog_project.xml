<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/new_project_layoutroot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginBottom="50dp"
    android:orientation="vertical" 
	>
	<LinearLayout
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="0px" android:layout_height="0px"/>
    <EditText
        android:id="@+id/new_project_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:hint="Nazwa Projektu" />

    <EditText
        android:id="@+id/new_project_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Opis Projektu"
        android:inputType="textMultiLine"
        android:lines="5" >
    </EditText>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/new_project_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_weight="0.50"
            android:text="Ok" />

        <Button
            android:id="@+id/new_project_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="Anuluj" />
    </LinearLayout>

</LinearLayout>
